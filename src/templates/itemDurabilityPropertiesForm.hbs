<div class="item-automatic-bonus-dnd5e-item-durability-tab">

  <section class="sheet-body">
    <h3 class="form-header">{{localize "item-automatic-bonus-dnd5e.itemDurabilityTab.title"}}</h3>
    <div class="form-group stacked">
      <fieldset>
          <legend>{{localize "item-automatic-bonus-dnd5e.itemDurabilityTab.HpTitle"}}</legend>
          <label>
              {{ localize "item-automatic-bonus-dnd5e.itemDurabilityTab.HpTitleHint"}}
          </label>
          <div class="form-group">
              <label
                  for="flags.item-automatic-bonus-dnd5e.itemHpValue">
                  {{ localize "item-automatic-bonus-dnd5e.itemHpValueHint"}}
              </label>
              <div class="form-fields">
                  {{numberInput member.itemHpValue name="flags.item-automatic-bonus-dnd5e.itemHpValue"}}
              </div>
          </div>
          <div class="form-group">
              <label
                  for="flags.item-automatic-bonus-dnd5e.itemHpMax">
                  {{ localize "item-automatic-bonus-dnd5e.itemHpMaxHint"}}
              </label>
              <div class="form-fields">
                  {{numberInput member.itemHpMax name="flags.item-automatic-bonus-dnd5e.itemHpMax"}}
              </div>
          </div>
          <div class="form-group">
              <label
                  for="flags.item-automatic-bonus-dnd5e.itemHpTemp">
                  {{ localize "item-automatic-bonus-dnd5e.itemHpTempHint"}}
              </label>
              <div class="form-fields">
                  {{numberInput member.itemHpTemp name="flags.item-automatic-bonus-dnd5e.itemHpTemp"}}
              </div>
          </div>
          <div class="form-group">
              <label
                  for="flags.item-automatic-bonus-dnd5e.itemHpTempMax">
                  {{ localize "item-automatic-bonus-dnd5e.itemHpTempMaxHint"}}
              </label>
              <div class="form-fields">
                  {{numberInput member.itemHpTempMax name="flags.item-automatic-bonus-dnd5e.itemHpTempMax"}}
              </div>
          </div>
          <div class="form-group">
              <label
                  for="flags.item-automatic-bonus-dnd5e.itemHpFormula">
                  {{ localize "item-automatic-bonus-dnd5e.itemHpFormulaHint"}}
              </label>
              <div class="form-fields">
                <input
                    type="text"
                    name="flags.item-automatic-bonus-dnd5e.itemHpFormula"
                    data-dtype="String"
                    value="{{member.itemHpFormula}}" >
                </input>
              </div>
          </div>
      </fieldset>
      <hr>
      <div class="hp flexrow">
          <div class="bar-container">
              <div class="bar" style="width:{{member.hp.pct}}%; background:{{member.hp.color}}; border-color:{{member.hp.border}}"></div>
          </div>
          {{#if displayHPValues}}
          <span class="current">{{member.hp.current}}</span>
          <span class="sep">/</span>
          <span class="max">{{member.hp.max}}</span>
          {{/if}}
      </div>
    </div>

    <div class="form-group stacked weapon-properties">
      {{#each flags.item-automatic-bonus-dnd5e.itemDurabilityProperties as |value key|}}
      {{#unless (or (eq key "saveDamage") (eq key "confirmTargets"))}}
      <div class="item flexrow" data-item-uuid="{{@root.itemUuid}}" data-item-key="{{key}}">
          <label class="checkbox">
            <input type="checkbox" name="flags.item-automatic-bonus-dnd5e.itemDurabilityProperties.{{key}}.enable" {{checked value.enable}} />
          </label>
          <img class="item-image" src="{{value.img}}" data-tooltip="{{value.name}}" data-edit="flags.item-automatic-bonus-dnd5e.itemDurabilityProperties.{{key}}.img" />
          <label class="item-name">{{value.name}}</label>
          <label class="item-percentage">
            <!--{{numberInput value.percentage name="flags.item-automatic-bonus-dnd5e.itemDurabilityProperties.{{key}}.percentage" step=1 min=0 max=100}}%-->
            <input type="number" value="{{value.percentage}}" name="flags.item-automatic-bonus-dnd5e.itemDurabilityProperties.{{key}}.percentage" step="1" min="0" max="100" />%
          </label>
      </div>
      {{/unless}}
      {{/each}}
    </div>
    <!--
    <div class="form-group stacked weapon-properties">
      {{#each flags.item-automatic-bonus-dnd5e.itemDurabilityProperties as |value key|}}
      {{#unless (or (eq key "saveDamage") (eq key "confirmTargets"))}}
      <label class="checkbox">
        <input type="checkbox" name="flags.item-automatic-bonus-dnd5e.itemDurabilityProperties.{{key}}" {{checked value}} />
        {{lookup ../itemDurabilityPropertiesLabels key}}
      </label>
      {{/unless}}
      {{/each}}
    </div>
    -->
  </section>
</div>